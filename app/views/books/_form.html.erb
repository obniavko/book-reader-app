<div class="my-5">
  <%= simple_form_for book, url: polymorphic_path(book), defaults: { input_html: { class: "form" } } do |f| %>
    <div class="my-5">
      <%= f.input :title %>
    </div>
    <div class="my-5">
      <%= f.input :author %>
    </div>
    <div class="my-5">
      <%= f.input :isbn, placeholder: '0000000000000 - 13 digits' %>
    </div>
    <div class="my-5">
      <%= f.input :description %>
     </div>
    <div class="my-5">
      <%= f.button :submit, class: "btn btn-green" %>
    </div>
  <% end %>
</div>
