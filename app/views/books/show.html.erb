<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <p class="my-5 text-4xl font-bold">
      <%= @book.title %>
    </p>

    <%= image_tag @book.cover, class: "h-2/5" if @book.cover.attached? %>

    <p class="my-5">
      <strong class="block mb-1 font-medium">Author:</strong>
      <%= @book.author %>
    </p>

    <p class="my-5">
      <strong class="block mb-1 font-medium">Isbn:</strong>
      <%= @book.isbn %>
    </p>

    <p class="my-5">
      <strong class="block mb-1 font-medium">Description:</strong>
      <%= @book.description %>
    </p>

    <% if user_signed_in? && @book.content.attached? %>
      <%= link_to "Read this book", read_book_path(@book), class: "btn btn-green" %>
    <% end %>
    <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-primary" %>
    <%= link_to "Back to books", books_path, class: "btn btn-primary" %>
  </div>
</div>
